<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NZTechEvents</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Site name/brand -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">NZTechEvents</a>

            <!-- Toggler for small screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Nav contents (search, sorting, login) -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left side: search & sorting -->
                <form class="d-flex ms-3" method="get" asp-controller="Home" asp-action="Index">
                    <input class="form-control me-2" type="search" placeholder="Search" name="search" />
                    <select class="form-select me-2" name="sort">
                        <option value="date">Sort by Date</option>
                        <option value="location">Sort by Location</option>
                        <option value="isfree">Sort by IsFree</option>
                    </select>
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

                <!-- Right side: sign up / login links -->
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Body Content -->
    <main class="container-fluid p-0">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
